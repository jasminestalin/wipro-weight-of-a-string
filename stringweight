String str;
		int weight=0;
		str=input1.toUpperCase();
		for(int i=0;i<str.length();i++)
		{
			char letter=str.charAt(i);
			if(input2==0)
				if((letter=='A'||letter=='E'||letter=='I'||letter=='O'||letter=='U'))
				
					continue;
			
			if(letter>=65 && letter<=90)
			{
				weight=weight+letter-64;
			}
		}
      return weight;
